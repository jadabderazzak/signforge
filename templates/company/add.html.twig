{% extends 'base.html.twig' %}

{% block title %}SignForge | company informations
{% endblock %}

{% block body %}
	<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
		<h1 class="text-2xl font-bold text-gray-800 mb-8 text-center">Company Information</h1>

		{{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}


		<div class="grid grid-cols-1 gap-6">
			<div>
				<label class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
				{{ form_widget(form.name, {
                attr: {
                    class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                    placeholder: 'Enter your company name'
                }
            }) }}
				<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.name) }}</span>
			</div>

			<div>
				<label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
				{{ form_widget(form.phone, {
                attr: {
                    class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                    placeholder: 'Company phone number'
                }
            }) }}
				<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.phone) }}</span>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-1">Tax Identification</label>
					{{ form_widget(form.TaxIdentification, {
                    attr: {
                        class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                        placeholder: 'VAT, ICE, etc.'
                    }
                }) }}
					<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.TaxIdentification) }}</span>
				</div>

				<div>
					<label class="block text-sm font-medium text-gray-700 mb-1">Registration Number</label>
					{{ form_widget(form.RegistrationNumber, {
                    attr: {
                        class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                        placeholder: 'Company RC number'
                    }
                }) }}
					<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.RegistrationNumber) }}</span>
				</div>
                <div>
					<label class="block text-sm font-medium text-gray-700 mb-1">Currency</label>
					{{ form_widget(form.currency, {
                    attr: {
                        class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                        placeholder: 'Currency symbol (e.g. $, €, £)'
                    }
                }) }}
					<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.currency) }}</span>
				</div>
			</div>

			<div>
				<label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
				{{ form_widget(form.adress, {
                attr: {
                    class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                    rows: 3,
                    placeholder: 'Enter company full address'
                }
            }) }}
				<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.adress) }}</span>
			</div>

            <div>
				<label class="block text-sm font-medium text-gray-700 mb-1">Footer</label>
				{{ form_widget(form.footer, {
                attr: {
                    class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                    rows: 3,
                    placeholder: 'Enter company full address'
                }
            }) }}
				<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.footer) }}</span>
			</div>

			<div>
				<label class="block text-sm font-medium text-gray-700 mb-1">Additional Information</label>
				{{ form_widget(form.BankDetails, {
                attr: {
                    class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-3 px-4 border',
                    rows: 3,
                    placeholder: 'Enter Additional Information'
                }
            }) }}
				<span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.BankDetails) }}</span>
			</div>
		</div>

		<div class="w-full flex flex-col md:flex-row justify-between items-center gap-4">
            <div class="w-full md:w-1/2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Company Logo</label>
                <div class="flex items-center justify-center w-full">
                    <label
                        for="mylogo" class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors relative overflow-hidden">
                        <!-- Default state -->
                        <div id="upload-default" class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-8 h-8 mb-3 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p class="text-xs text-gray-500">PNG, JPG (max. 5MB)</p>
                        </div>

                        <!-- Selected file state (hidden by default) -->
                        <div id="upload-selected" class="hidden flex-col items-center justify-center p-2 w-full h-full">
                            <svg class="w-8 h-8 mb-2 text-green-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <p id="selected-filename" class="text-sm font-medium text-gray-700 text-center truncate px-2 w-full"></p>
                            <p class="text-xs text-green-600 mt-1">File selected</p>
                        </div>

                        <input id="mylogo" name="file" type="file" class="hidden" accept="image/png, image/jpeg" onchange="previewFile(this)">
                    </label>
                </div>
            </div>
             <div class="w-full md:w-1/2">
			    <div id="logo-preview" class="mt-2 flex justify-center"></div>
            </div>
		</div>

		<div class="flex justify-end pt-6 border-t border-gray-200">
			<button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
				Save Information
			</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
{% block javascripts %}
    {{ parent()}}
    {{ encore_entry_script_tags('ckeditor') }}
    <script>
        function previewFile(input) {
            const defaultUI = document.getElementById('upload-default');
            const selectedUI = document.getElementById('upload-selected');
            const fileNameDisplay = document.getElementById('selected-filename');
            
            if (input.files && input.files[0]) {
                // Show selected state
                defaultUI.classList.add('hidden');
                selectedUI.classList.remove('hidden');
                fileNameDisplay.textContent = input.files[0].name;
                
                // Optional image preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('logo-preview').innerHTML = `
                        <img src="${e.target.result}" class="h-20 rounded-md border object-contain" alt="Preview">
                    `;
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                // Revert to default state
                defaultUI.classList.remove('hidden');
                selectedUI.classList.add('hidden');
                document.getElementById('logo-preview').innerHTML = '';
            }
        }
</script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}SignForge |
	{{ "All Documents"|trans }}
{% endblock %}

{% block body %}
	<div class="max-w-7xl mx-auto px-4 py-8">


		<div class="sm:flex sm:items-center sm:justify-between mb-8">
			<div
				class="flex items-center">
				<!-- Page Title -->
				<div class="">
					<h1 class="text-2xl font-bold text-gray-900 flex items-center">
						<svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
						</svg>
						{{ "All Documents"|trans }}
					</h1>
					<p class="text-sm text-gray-500 mt-1">{{ "List of all generated documents"|trans }}</p>
				</div>
			</div>
			<div class="mt-4 sm:mt-0">
				<a href="{{ path('app_documents_add') }}" class="inline-flex items-center px-4 py-2.5 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
					<svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
					</svg>
					{{"New Document" | trans}}
				</a>
			</div>
		</div>

		<!-- Document Types Badge Filter -->
		<div class="flex flex-wrap justify-center items-center gap-3 mb-8">
			{% for type in types %}
				<a href="{{ path('app_document_by_type',{slug : type.slug})}}">
					<span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium
							                     bg-gray-200 text-gray-800 shadow-sm hover:bg-gray-300 transition">
						{{ type.label | trans}}
					</span>
				</a>
			{% endfor %}
		</div>

		<!-- Document Table -->
		<div class="bg-white shadow-sm border border-gray-200 rounded-xl overflow-x-auto">
			<table class="min-w-full text-sm text-left text-gray-700">
				<thead class="bg-gray-50 border-b text-xs font-semibold text-gray-600 uppercase tracking-wider">
					<tr>
						<th class="px-6 py-4">#</th>
						<th class="px-6 py-4">{{ "Document Number"|trans }}</th>
						<th class="px-6 py-4">{{ "Client"|trans }}</th>
						<th class="px-6 py-4">{{ "Type"|trans }}</th>
						<th class="px-6 py-4">{{ "Date"|trans }}</th>
						<th class="px-6 py-4">{{ "Total"|trans }}</th>
						<th class="px-6 py-4 text-center">{{ "Status"|trans }}</th>
						<th class="px-6 py-4 text-right">{{ "Actions"|trans }}</th>
					</tr>
				</thead>
				<tbody class="divide-y divide-gray-100">
					{% for document in documents %}
						<tr class="hover:bg-gray-50 transition">
							<td class="px-6 py-4 font-medium text-gray-800">{{ loop.index }}</td>
							<td class="px-6 py-4">{{ document.documentNumber }}</td>
							<td class="px-6 py-4">{{ document.client.name }}</td>
							<td class="px-6 py-4">
								<span class="inline-block rounded-full bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1">
									{{ document.type.label | trans }}
								</span>
							</td>
							<td class="px-6 py-4">{{ document.createdAt|date('Y-m-d') }}</td>
							<td class="px-6 py-4 font-semibold text-gray-900">{{ currency }}
								{{ document.total | number_format(2, '.', ',') }}</td>
							<td class="px-6 py-4 text-center">
								{% if document.status %}
									<span class="inline-block px-2 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-full">{{ "Confirmed"|trans }}</span>
								{% else %}
									<span class="inline-block px-2 py-1 text-xs font-semibold text-yellow-700 bg-yellow-100 rounded-full">{{ "Draft"|trans }}</span>
								{% endif %}
							</td>
							<td class="px-6 py-4 text-right space-x-2">
								{% if not document.status %}
									<a href="{{ path('app_document_validate', {slug: document.slug}) }}" class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-white bg-green-600 hover:bg-green-700 rounded-lg">
										{{ "Validate"|trans }}
									</a>
								{% endif %}
								<a href="{{ path('app_document_preview', {slug: document.slug}) }}" class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg">
									{{ "View"|trans }}
								</a>
								<a href="{{ path('app_documents_pdf', {slug: document.slug}) }}" target="_blank" class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-white bg-gray-600 hover:bg-gray-700 rounded-lg">
									{{ "PDF"|trans }}
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8" class="px-6 py-4 text-center text-sm text-gray-500">{{ "No documents found."|trans }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}

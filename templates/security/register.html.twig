{% extends 'base.html.twig' %}

{% block title %}{{"SignForge | Register" | trans }}{% endblock %}

{% block body %}
<section class="flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white rounded-xl shadow-2xl overflow-hidden">
        <div class="bg-indigo-600 px-8 py-6">
            <div class="flex justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M16 7a4 4 0 01-8 0M12 14a8 8 0 100-16 8 8 0 000 16zm0 2a10 10 0 00-10 10h20a10 10 0 00-10-10z"/>
                </svg>
            </div>
            <h2 class="mt-4 text-center text-3xl font-extrabold text-white">
                {{"Create your account" | trans}}
            </h2>
            <p class="mt-2 text-center text-sm text-indigo-100">
                {{"Join SignForge and manage your contracts with confidence" |trans}}
            </p>
        </div>

        <div class="px-8 py-6">
            {{ form_start(form) }}
            <div class="space-y-6">

                <div>
                    {{ form_widget(form.name, {
                        attr: {
                            placeholder: 'Enter your full name' |trans,
                            class: 'w-full bg-white text-sm text-gray-900 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 px-4 py-3 shadow-sm'
                        }
                    }) }}
                    <span class="text-sm text-red-700">{{ form_errors(form.name) }}</span>
                </div>

                <div>
                    {{ form_widget(form.email, {
                        attr: {
                            placeholder: 'Enter your professional email address' | trans,
                            class: 'w-full bg-white text-sm text-gray-900 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 px-4 py-3 shadow-sm'
                        }
                    }) }}
                    <span class="text-sm text-red-700">{{ form_errors(form.email) }}</span>
                </div>

                <div>
                    {{ form_widget(form.password, {
                        attr: {
                            placeholder: 'Create a secure password' | trans,
                            class: 'w-full bg-white text-sm text-gray-900 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 px-4 py-3 shadow-sm'
                        }
                    }) }}
                    <span class="text-sm text-red-700">{{ form_errors(form.password) }}</span>
                </div>

                <div>
                    {{ form_widget(form.confirm_password, {
                        attr: {
                            placeholder: 'Confirm your password' | trans,
                            class: 'w-full bg-white text-sm text-gray-900 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 px-4 py-3 shadow-sm'
                        }
                    }) }}
                    <span class="text-sm text-red-700">{{ form_errors(form.confirm_password) }}</span>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                        {{"Create account" | trans}}
                    </button>
                </div>
            </div>
            {{ form_end(form) }}

            <div class="text-center text-sm text-gray-600 mt-6">
                {{"Already have an account?" | trans}}
                <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
                    {{"Sign in" | trans }}
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}

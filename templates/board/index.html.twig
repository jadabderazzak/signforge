{% block javascripts %}
    {{ parent() }}
    
    {# Load Chart.js from CDN #}
    <script src="{{ asset('template/js/chart.min.js')}}"></script>

    {# Prepare translated labels for document types (e.g., Invoice, Quote) #}
    {% set translatedLabels = documentTypes|map(type => type.type|trans) %}
    {# Extract document counts per type #}
    {% set dataCounts = documentTypes|map(type => type.count) %}

    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // ============================================
            // Doughnut Chart: Documents by Type
            // ============================================
            const typeCtx = document.getElementById('documentsByTypeChart');

            if (typeCtx) {
                new Chart(typeCtx, {
                    type: 'doughnut',
                    data: {
                        labels: {{ translatedLabels|json_encode|raw }}, // Translated document types
                        datasets: [{
                            data: {{ dataCounts|json_encode|raw }}, // Number of documents per type
                            backgroundColor: [
                                '#4e73df', // Blue
                                '#1cc88a', // Green
                                '#36b9cc', // Teal
                                '#f6c23e', // Yellow
                                '#e74a3b'  // Red
                            ]
                        }]
                    },
                    options: {
                        maintainAspectRatio: false
                    }
                });
            }

            // ============================================
            // Bar Chart: Monthly Revenue
            // ============================================
            const revenueCtx = document.getElementById('monthlyRevenueChart');

            if (revenueCtx) {
                new Chart(revenueCtx, {
                    type: 'bar',
                    data: {
                        labels: {{ monthlyRevenue|map(item => item.month)|json_encode|raw }}, // Month labels
                        datasets: [{
                            label: '{{ "Revenue" | trans }}',
                            backgroundColor: "#4e73df",
                            data: {{ monthlyRevenue|map(item => item.total)|json_encode|raw }} // Monthly totals
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    // Prefix currency symbol from backend (e.g., $, €, etc.)
                                    callback: function(value) {
                                        return {{ symbol|json_encode|raw }} + value.toLocaleString();
                                    }
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    // Show currency symbol in tooltip
                                    label: function(context) {
                                        return context.dataset.label + ': ' + {{ symbol|json_encode|raw }} + context.parsed.y.toLocaleString();
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}

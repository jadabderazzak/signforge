{# templates/board/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}SignForge | Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
   
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">


    <!-- Main Content -->
    <div class="">
        <!-- Dashboard Content -->
        <main class="p-6">
        {% if not company or clients is empty %}
<div class="mb-6 p-4 bg-white rounded-lg border border-gray-100 shadow-sm">
    <h3 class="text-sm font-semibold text-gray-700 mb-3 flex items-center">
        <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        Quick Setup
    </h3>
    
    <div class="space-y-2">
        {% if not company %}
        <div class="flex justify-between items-center p-2 hover:bg-gray-50 rounded">
            <div>
                <p class="text-sm font-medium text-gray-800">1. Add company</p>
                <p class="text-xs text-gray-500">Required for document branding</p>
            </div>
            <a href="{{ path('app_company_add') }}" class="text-xs font-medium text-blue-600 hover:text-blue-800 px-2 py-1 rounded hover:bg-blue-50">
                Complete
            </a>
        </div>
        {% endif %}
        
        {% if clients is empty %}
        <div class="flex justify-between items-center p-2 hover:bg-gray-50 rounded">
            <div>
                <p class="text-sm font-medium text-gray-800">2. Add client</p>
                <p class="text-xs text-gray-500">Needed to create documents</p>
            </div>
            <a href="{{ path('app_client_add') }}" class="text-xs font-medium text-blue-600 hover:text-blue-800 px-2 py-1 rounded hover:bg-blue-50">
                Complete
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Total Documents</p>
                            <h3 class="text-2xl font-bold text-gray-800">{{ stats.totalDocuments }}</h3>
                        </div>
                        <div class="p-3 rounded-full bg-indigo-100 text-indigo-600">
                            <i class="fas fa-file-invoice text-xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Active Clients</p>
                            <h3 class="text-2xl font-bold text-gray-800">{{ stats.totalClients }}</h3>
                        </div>
                        <div class="p-3 rounded-full bg-green-100 text-green-600">
                            <i class="fas fa-users text-xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Pending Invoices</p>
                            <h3 class="text-2xl font-bold text-gray-800">{{ stats.pendingInvoices }}</h3>
                        </div>
                        <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                            <i class="fas fa-clock text-xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Revenue</p>
                            <h3 class="text-2xl font-bold text-gray-800">{{symbol}}{{ stats.totalRevenue|number_format(2) }}</h3>
                        </div>
                       <div class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-100 text-blue-600 text-xl font-bold">
                            {{ symbol }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Documents -->
            <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-800">Recent Documents</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Number</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for document in recentDocuments %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <a href="{{ path('app_document_preview', {'slug': document.slug}) }}" class="text-indigo-600 hover:text-indigo-900">{{ document.documentNumber }}</a>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <img class="h-10 w-10 rounded-full" src="https://ui-avatars.com/api/?name={{ document.client.name|url_encode }}" alt="">
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">{{ document.client.company }}</div>
                                            <div class="text-sm text-gray-500">{{ document.client.name }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800">
                                        {{ document.type.name }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    {{ document.createdAt|date('M d, Y') }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    {{symbol}}{{ document.total|number_format(2) }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% if document.status %}
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            Validated
                                        </span>
                                    {% else %}
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            Pending
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="px-6 py-4 border-t border-gray-200">
                    <a href="{{ path('app_documents') }}" class="text-indigo-600 hover:text-indigo-900 font-medium">View all documents</a>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Documents by Type</h3>
                    <div class="h-64">
                        <canvas id="documentsByTypeChart"></canvas>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Monthly Revenue</h3>
                    <div class="h-64">
                        <canvas id="monthlyRevenueChart"></canvas>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{# templates/dashboard/index.html.twig #}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Documents by Type Chart
            const typeCtx = document.getElementById('documentsByTypeChart');
            if (typeCtx) {
                new Chart(typeCtx, {
                    type: 'doughnut',
                    data: {
                        labels: {{ documentTypes|map(type => type.type)|json_encode|raw }},
                        datasets: [{
                            data: {{ documentTypes|map(type => type.count)|json_encode|raw }},
                            backgroundColor: [
                                '#4e73df',
                                '#1cc88a',
                                '#36b9cc',
                                '#f6c23e',
                                '#e74a3b'
                            ]
                        }]
                    },
                    options: {
                        maintainAspectRatio: false
                    }
                });
            }

            // Monthly Revenue Chart
            const revenueCtx = document.getElementById('monthlyRevenueChart');
            if (revenueCtx) {
                new Chart(revenueCtx, {
                    type: 'bar',
                    data: {
                        labels: {{ monthlyRevenue|map(item => item.month)|json_encode|raw }},
                        datasets: [{
                            label: "Revenue",
                            backgroundColor: "#4e73df",
                            data: {{ monthlyRevenue|map(item => item.total)|json_encode|raw }}
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return '{{symbol}}' + value.toLocaleString();
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>

{% endblock %}
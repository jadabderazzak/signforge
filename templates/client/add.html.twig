{% extends 'base.html.twig' %}

{% block title %}SignForge | {{ update ? "Edit client" : "Add New Client" }}{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5 border-b border-gray-200">
            <div class="flex items-center">
                <div class="p-2 rounded-lg bg-blue-100 mr-4">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">{{ update ? "Edit client" : "Add New Client" }}</h1>
                    <p class="text-sm text-gray-600 mt-1">Fill in the client details below</p>
                </div>
            </div>
        </div>

        <!-- Form -->
        <div class="px-6 py-5">
            {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <!-- Name -->
                <div>
                    {{ form_label(form.name, 'Contact Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.name, {
                        'attr': {
                            'class': 'w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                            'placeholder': 'John Doe'
                        }
                    }) }}
                    <span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.name) }}</span>
                </div>

                <!-- Email -->
                <div>
                    {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.email, {
                        'attr': {
                            'class': 'w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                            'placeholder': 'contact@example.com'
                        }
                    }) }}
                    <span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.email) }}</span>
                </div>
            </div>

            <!-- Company -->
            <div>
                {{ form_label(form.company, 'Company Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.company, {
                    'attr': {
                        'class': 'w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                        'placeholder': 'Acme Corporation'
                    }
                }) }}
                <span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.company) }}</span>
            </div>

            <!-- Address -->
            <div>
                {{ form_label(form.adress, 'Company Address', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.adress, {
                    'attr': {
                        'class': 'w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                        'placeholder': '123 Business St, City, Country'
                    }
                }) }}
                <span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.adress) }}</span>
            </div>

            <!-- Tax Number -->
            <div>
                {{ form_label(form.taxNumber, 'Tax Identification', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.taxNumber, {
                    'attr': {
                        'class': 'w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                        'placeholder': 'VAT, NIF, ICE, etc.'
                    }
                }) }}
                <span class="text-xs text-red-600 mt-1 block">{{ form_errors(form.taxNumber) }}</span>
            </div>

            <!-- Submit Button -->
            <div class="pt-4 flex justify-end space-x-3">
                <a href="{{ path('app_client') }}" class="px-4 py-2.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                    Cancel
                </a>
                <button type="submit" class="inline-flex items-center px-6 py-2.5 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                    </svg>
                    Save Client
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}